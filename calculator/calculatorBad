//Select Function
float userenterfloat1;
float userenterfloat2;
string userentersymb;

string function(string problemType){
    if (problemType == "+"){
        cout << "Addition Selected" << endl;
        cout << endl;
    }
    if (problemType == "-"){
        cout << "Subtraction Selected" << endl;
        cout << endl;
     }
    if (problemType == "/"){
        cout << "Division Selected" << endl;
        cout << endl;
     }
    if (problemType == "*"){
        cout << "Multiplication Selected" << endl;
        cout << endl;
    }
 
return problemType;
}

string enterNumber(){
    cout << "Select a function {+ - / *}" << endl;
    cin >> userentersymb;
    function(userentersymb);
return userentersymb;
}




